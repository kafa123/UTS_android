<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/paint_2"
        android:backgroundTint="@color/blackSoft"
        android:backgroundTintMode="multiply"
        >
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="horizontal"
            android:id="@+id/guidline"/>



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/kim"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/guidline"
                />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@id/guidline"
            android:src="@drawable/profile_name"
            android:alpha="50"/>
            <TextView
                android:id="@+id/name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/guidline"
                android:text="Nur Muhammad Kafabih"
                android:layout_marginStart="12dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:id="@+id/logut"
            android:src="@drawable/baseline_logout_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/guidline"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/movie_card"
            android:id="@+id/recycle_bookmarks"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>